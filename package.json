{
    "scripts": {
        "dev": "node run.js",
        "format": "pnpm \"/format:.*/\"",
        "format:prettier": "prettier --write .",
        "format:sort": "tailwind-sorter sort -i \"./src/**/*.php\"",
        "htpasswd": "docker exec -it nginx \"./htpasswd.sh\" && docker cp \"nginx:/etc/nginx/.htpasswd\" \"./.htpasswd\"",
        "start": "node env.js && docker compose up"
    },
    "type": "module",
    "devDependencies": {
        "@prettier/plugin-php": "^0.24.0",
        "@tailwindcss/cli": "^4.1.12",
        "@types/node": "^24.3.0",
        "array-iter": "^1.0.0",
        "esbuild": "^0.25.9",
        "is-docker": "^4.0.0",
        "prettier": "^3.6.2",
        "tailwind-sorter": "^1.0.1",
        "tailwindcss": "^4.1.12",
        "tinyglobby": "^0.2.14"
    }
}
